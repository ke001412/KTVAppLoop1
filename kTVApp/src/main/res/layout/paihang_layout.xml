<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    
    >
    <TextView 
        android:gravity="left|center"
        android:layout_width="match_parent"
    android:layout_height="30dp"
    android:id="@+id/paihang_title"
    style="@style/NormalWhiteText12"
    android:text="点歌->金曲排行"
    
        />
<LinearLayout
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="50dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
     >
    <LinearLayout 
          android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
     android:layout_weight="1"
        >
        <ImageView 
            android:id="@+id/paihang_zong"
             android:layout_width="match_parent"
    android:layout_height="match_parent"
            android:background="@drawable/paihang1"
            android:layout_weight="1"
            />
           <ImageView 
               android:id="@+id/paihang_month"
                android:layout_weight="1"
             android:layout_width="match_parent"
    android:layout_height="match_parent"
            android:background="@drawable/paihang2"
            />
              <ImageView 
                    android:id="@+id/paihang_zhou"
                   android:layout_weight="1"
             android:layout_width="match_parent"
    android:layout_height="match_parent"
            android:background="@drawable/paihang3"
            />
               <ImageView 
                     android:id="@+id/paihang_qita"
                    android:layout_weight="1"
             android:layout_width="match_parent"
    android:layout_height="match_parent"
            android:background="@drawable/paihang8"
            />
    </LinearLayout>
    
    
     <LinearLayout 
          android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
     android:layout_weight="1"
        >
        <ImageView 
              android:id="@+id/paihang_xin"
             android:layout_width="match_parent"
    android:layout_height="match_parent"
            android:background="@drawable/paihang6"
            android:layout_weight="1"
            />
           <ImageView 
                 android:id="@+id/paihang_guo"
                android:layout_weight="1"
             android:layout_width="match_parent"
    android:layout_height="match_parent"
            android:background="@drawable/paihang4"
            />
              <ImageView 
                    android:id="@+id/paihang_yue"
                   android:layout_weight="1"
             android:layout_width="match_parent"
    android:layout_height="match_parent"
            android:background="@drawable/paihang7"
            />
               <ImageView 
                     android:id="@+id/paihang_min"
                    android:layout_weight="1"
             android:layout_width="match_parent"
    android:layout_height="match_parent"
            android:background="@drawable/paihang5"
            />
    </LinearLayout>
</LinearLayout>
     
<com.sz.ktv.view.widget.KtvBottomPageWidget
    android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:id="@+id/paihang_back"
    	android:layout_alignParentBottom="true"
    	android:layout_marginBottom="5dp"
    />
</RelativeLayout>