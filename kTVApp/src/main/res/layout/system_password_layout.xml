<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/houtai"
    >
    <TextView 
          android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentTop="true"
    android:text="@string/ktv_guanli_mima"
    style="@style/BoldWhiteText24"
    android:gravity="center"
        />
<RelativeLayout 
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    android:layout_marginBottom="35dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:gravity="center"
    android:id="@+id/password_top_text"
    android:layout_centerHorizontal="true"
        >
 <TextView 
     android:layout_width="100dp"
    android:layout_height="45dp"
    android:text="@string/ktv_xinmima"
    style="@style/NormalWhiteText16"
    android:layout_gravity="center"
     android:gravity="center"
     android:id="@+id/show_left"
     />       
      <TextView 
          android:layout_width="270dp"
    android:layout_height="match_parent"
    android:background="@color/color_blue"
     android:id="@+id/key_show"
     android:layout_toRightOf="@id/show_left"
          />  
        
    </RelativeLayout>


<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="35dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_below="@id/password_top_text"
    >
    
    <RelativeLayout
        android:id="@+id/password_one_layout" 
         android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_centerHorizontal="true"
        >
    <LinearLayout 
        android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:id="@+id/password_key_one"
        >
  <Button 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="0"
    android:id="@+id/key_0"
    android:layout_weight="1"
    android:layout_margin="2dp"
     style="@style/NormalBlackText16"
     android:background="@color/color_white"
      />
        
   <Button 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="1"
     android:id="@+id/key_1"
    android:layout_weight="1"
     style="@style/NormalBlackText16"
    android:layout_margin="2dp"
     android:background="@color/color_white"
      /> <Button 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="2"
     android:id="@+id/key_2"
    android:layout_weight="1"
    android:layout_margin="2dp"
     style="@style/NormalBlackText16"
     android:background="@color/color_white"
      /> <Button 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="3"
     android:id="@+id/key_3"
     android:layout_margin="2dp"
    android:layout_weight="1"
     style="@style/NormalBlackText16"
     android:background="@color/color_white"
      /> <Button 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="4"
     android:id="@+id/key_4"
    android:layout_weight="1"
    android:layout_margin="2dp"
     style="@style/NormalBlackText16"
     android:background="@color/color_white"
      />
    </LinearLayout>
      <Button 
          android:layout_width="70dp"
    android:layout_height="55dp"
    android:layout_margin="5dp"
    android:text="删除"
     android:id="@+id/key_delete"
    style="@style/NormalWhiteText16"
    android:layout_toRightOf="@id/password_key_one"
    android:gravity="center"
     android:background="@drawable/button"
          />  
    </RelativeLayout>
    
    <RelativeLayout 
         android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_below="@id/password_one_layout"
    android:layout_centerHorizontal="true"
        >
    <LinearLayout 
        android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:id="@+id/password_two_key"
        >
  <Button 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="5"
     android:id="@+id/key_5"
    android:layout_weight="1"
    android:layout_margin="2dp"
     style="@style/NormalBlackText16"
     android:background="@color/color_white"
      />
        
   <Button 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="6"
     android:id="@+id/key_6"
     android:layout_margin="2dp"
    android:layout_weight="1"
     style="@style/NormalBlackText16"
     android:background="@color/color_white"
      /> <Button 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="7"
     android:id="@+id/key_7"
    android:layout_weight="1"
     style="@style/NormalBlackText16"
     android:layout_margin="2dp"
     android:background="@color/color_white"
      /> <Button 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="8"
     android:id="@+id/key_8"
    android:layout_weight="1"
    android:layout_margin="2dp"
     style="@style/NormalBlackText16"
     android:background="@color/color_white"
      /> <Button 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="9"
     android:id="@+id/key_9"
    android:layout_weight="1"
    android:layout_margin="2dp"
     style="@style/NormalBlackText16"
     android:background="@color/color_white"
      />
    </LinearLayout>
      <Button 
          android:layout_width="70dp"
    android:layout_height="55dp"
    android:text="确定"
    android:layout_margin="5dp"
     android:id="@+id/key_enter"
    style="@style/NormalWhiteText16"
    android:layout_toRightOf="@id/password_two_key"
    android:gravity="center"
     android:background="@drawable/button"
          />  
    </RelativeLayout>
    
</RelativeLayout>
</RelativeLayout>
<com.sz.ktv.view.widget.KtvBottomPageWidget
    android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:id="@+id/sys_password_back"
    	android:layout_alignParentBottom="true"
    	android:layout_marginBottom="10dp"
    />
</RelativeLayout>