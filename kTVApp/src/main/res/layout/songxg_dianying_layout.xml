<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
      >
 <LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_marginTop="0.5dp"
    android:layout_marginLeft="0.5dp"
     >
     <TextView 
         android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:text="@string/ktv_dongzuo"
    style="@style/NormalWhiteText18"
    android:gravity="center"
    android:layout_marginRight="0.5dp"
    android:background="@color/color_blue"
    android:id="@+id/xiugai_dongzuo"
         />
     <TextView 
    android:layout_marginRight="0.5dp"
         android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:text="@string/ktv_kehuan"
    android:background="@color/color_blue"
     style="@style/NormalWhiteText18"
     android:gravity="center"
     android:id="@+id/xiugai_kehuan"
         />
     
 </LinearLayout>
        
 
 <LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="0.5dp"
    android:layout_weight="1"
     >
     <TextView 
         android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:text="@string/ktv_xiju"
    android:background="@color/color_blue"
    style="@style/NormalWhiteText18"
    android:gravity="center"
    android:layout_marginRight="0.5dp"
    android:id="@+id/xiugai_xiju"
         />
     <TextView 
         android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:text="@string/ktv_zhanzheng"
    android:id="@+id/xiugai_zhanzheng"
    android:background="@color/color_blue"
    android:layout_marginRight="0.5dp"
     style="@style/NormalWhiteText18"
     android:gravity="center"
         />
     
 </LinearLayout>
 
 <LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="0.5dp"
    android:layout_weight="1"
     >
     <TextView 
         android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:text="@string/ktv_guzhuang"
    style="@style/NormalWhiteText18"
    android:background="@color/color_blue"
    android:gravity="center"
    android:id="@+id/xiugai_guzhuang"
    android:layout_marginRight="0.5dp"
         />
     <TextView 
         android:layout_marginRight="0.5dp"
         android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:text="@string/ktv_donghua"
    android:id="@+id/xiugai_donghua"
     style="@style/NormalWhiteText18"
     android:background="@color/color_blue"
     android:gravity="center"
         />
     
 </LinearLayout>
 
 <LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="0.5dp"
    android:layout_weight="1"
     >
     <TextView 
         android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:text="@string/ktv_feijing"
	android:id="@+id/xiugai_feijing"
    android:background="@color/color_blue"
    android:layout_marginRight="0.5dp"
    android:gravity="center"
    style="@style/NormalWhiteText18"
         />
     <TextView 
         android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:text="@string/ktv_qita"
    android:id="@+id/xiugai_qita"
    android:layout_marginRight="0.5dp"
    android:background="@color/color_blue"
    android:gravity="center"
     style="@style/NormalWhiteText18"
         />
     
 </LinearLayout>
 
  
</LinearLayout>