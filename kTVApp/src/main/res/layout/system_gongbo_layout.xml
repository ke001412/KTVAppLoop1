<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/houtai"
    >
    <TextView 
          android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentTop="true"
    android:text="@string/ktv_gongboshezhi"
    style="@style/BoldWhiteText24"
    android:gravity="center"
        />
<RelativeLayout 
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="55dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    >
   <TextView 
       android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="[1/3]"
    android:id="@+id/gongbo_page_show"
    style="@style/NormalRedText18"
    android:layout_alignParentRight="true"
    android:layout_marginRight="20dp"
    android:layout_alignParentTop="true"
    
       />
       <RelativeLayout
                 android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_alignParentBottom="true"
    android:id="@+id/gongbo_bottom_button"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
            >
           <Button 
                 android:layout_width="40dp"
    android:layout_height="30dp"
    android:background="@drawable/button"
    style="@style/NormalWhiteText16"
    android:text="@string/home_center_geming"
    android:layout_alignParentLeft="true"
    android:id="@+id/gongbo_bottom_geming"
    android:layout_centerVertical="true"
               />
         
           <LinearLayout 
                 android:layout_width="200dp"
    android:layout_height="35dp"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:id="@+id/gongbo_bottom_center"
               >
              <Button 
                android:layout_width="55dp"
    android:layout_height="30dp"
    android:background="@drawable/button"
    style="@style/NormalWhiteText16"
    android:text="@string/ktv_shangyiye"
    android:id="@+id/gongbo_bottom_pre"
               />
                 <Button 
                android:layout_width="55dp"
    android:layout_height="30dp"
    android:background="@drawable/button"
    style="@style/NormalWhiteText16"
    android:text="@string/ktv_xiayiye"
    android:layout_marginLeft="50dp"
    android:id="@+id/gongbo_bottom_next"
               />
           
           </LinearLayout>
             <Button 
                 android:id="@+id/gongbo_bottom_gexing"
                 android:layout_width="40dp"
    android:layout_height="30dp"
    android:background="@drawable/button"
    style="@style/NormalWhiteText16"
    android:text="@string/home_center_gexing"
    android:layout_marginRight="20dp"
      android:layout_centerVertical="true"
    android:layout_toLeftOf="@id/gongbo_bottom_center"
               />
             
                    <Button 
                android:layout_width="40dp"
    android:layout_height="30dp"
    android:background="@drawable/button"
    style="@style/NormalWhiteText16"
    android:text="@string/ktv_daluan"
    android:layout_alignParentRight="true"
    android:id="@+id/gongbo_bottom_daluan"
               />
                    
       </RelativeLayout>
       <View 
              android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/color_white"
    android:id="@+id/gongbo_spilt"
    android:layout_above="@id/gongbo_bottom_button"
           />
  <ListView 
         android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/gongbo_list"
    android:layout_above="@id/gongbo_spilt"
    android:layout_below="@id/gongbo_page_show"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
         />
 
</RelativeLayout>
<com.sz.ktv.view.widget.KtvBottomPageWidget
    android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:id="@+id/sys_gongbo_back"
    	android:layout_alignParentBottom="true"
    	android:layout_marginBottom="10dp"
    />
</RelativeLayout>