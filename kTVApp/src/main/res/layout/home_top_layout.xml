<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customAttr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_top_layout"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:id="@+id/home_top_media_online"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/top_nav_imame_width"
            android:layout_height="@dimen/top_nav_imame_height"
            android:scaleType="centerInside"
            android:src="@drawable/home_movies_button" />

        <TextView
            style="@style/NormalWhiteText18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/home_button_movies" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_top_wifi_chose_song"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/home_top_media_online"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/top_nav_imame_width"
            android:layout_height="@dimen/top_nav_imame_height"
            android:scaleType="centerInside"
            android:src="@drawable/wuxian2" />

        <TextView
            style="@style/NormalWhiteText18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/home_button_wuxian" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_top_cloud_server"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/home_top_wifi_chose_song"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/top_nav_imame_width"
            android:layout_height="@dimen/top_nav_imame_height"
            android:scaleType="centerInside"
            android:src="@drawable/home_yunfuwu_button" />

        <TextView
            style="@style/NormalWhiteText18"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/home_button_yunfuwu" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_top_msg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/home_top_cloud_server"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/top_nav_imame_width"
            android:layout_height="@dimen/top_nav_imame_height"
            android:scaleType="centerInside"
            android:src="@drawable/home_xiaoxi_button"
            />

        <TextView
            style="@style/NormalWhiteText18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/home_button_xinxi" />
    </LinearLayout>

    <TextView
        android:id="@+id/home_top_search"
        style="@style/NormalWhiteText18"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:layout_toLeftOf="@id/home_top_msg"
        android:background="@drawable/home_sousuo_button"
        android:gravity="bottom|center" />

    <LinearLayout
        android:id="@+id/play_title_layout"
        android:layout_width="444dp"
        android:layout_height="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:layout_toLeftOf="@id/home_top_search"
        android:background="@drawable/paoma"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/play_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:singleLine="true"
            android:text="01234567890123456789012345678901234567890123456789012345678901234567890123456789"
            android:textColor="@android:color/white"
            android:textSize="18dip"/>
