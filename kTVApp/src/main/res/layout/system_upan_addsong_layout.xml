<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/houtai"
    >
    <TextView 
          android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentTop="true"
    android:text="@string/ktv_set_upanjiage"
    style="@style/BoldWhiteText24"
    android:gravity="center"
        />
<RelativeLayout 
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="35dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    >
    <RelativeLayout 
         android:layout_alignParentTop="true"
           android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:id="@+id/u_pan_top"
    android:layout_marginTop="60dp"
        >
<TextView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/ktv_cipanall"
    android:id="@+id/u_pan_all_size"
    style="@style/NormalWhiteText16"
    />
<TextView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/ktv_cipanshengxia"
    android:id="@+id/u_pan_last_size"
    android:layout_below="@id/u_pan_all_size"
    style="@style/NormalWhiteText16"
    android:layout_marginTop="5dp"
    />
<TextView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text=""
    android:id="@+id/u_pan_can_song_count"
    android:layout_below="@id/u_pan_last_size"
    style="@style/NormalWhiteText16"
    android:layout_marginTop="5dp"
    />
</RelativeLayout>

    <RelativeLayout 
        android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:layout_below="@+id/u_pan_top"
        >
        <RelativeLayout 
                   android:layout_width="112dp"
    android:layout_height="81dp"
    android:layout_alignParentLeft="true"
    android:id="@+id/u_pan_add_danqu"
            >
            <ImageView 
                     android:layout_width="112dp"
    android:layout_height="81dp"
    android:background="@drawable/add_usb"
                />
            <TextView 
                 android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/ktv_danqujiage"
    style="@style/NormalWhiteText15"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:layout_centerHorizontal="true"
                />
            
        </RelativeLayout>
        
          <RelativeLayout 
               android:layout_width="112dp"
    android:layout_height="81dp"
    android:layout_alignParentRight="true"
    android:id="@+id/u_pan_add_piliang"
            >
            <ImageView 
                 android:layout_width="112dp"
    android:layout_height="81dp"
    android:background="@drawable/add_usb1"
                />
            <TextView 
                 android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/ktv_piliangjiage"
    style="@style/NormalWhiteText16"
    android:layout_alignParentBottom="true"
      android:gravity="center"
                />
            
        </RelativeLayout>
        
    </RelativeLayout>
    
 
</RelativeLayout>
<com.sz.ktv.view.widget.KtvBottomPageWidget
    android:layout_width="match_parent"
    	android:layout_height="30dp"
    	android:id="@+id/sys_u_addsong_back"
    	android:layout_alignParentBottom="true"
    	android:layout_marginBottom="50dp"
    />
</RelativeLayout>