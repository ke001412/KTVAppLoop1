<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customAttr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_top_layout"
    android:layout_width="match_parent"
    android:layout_height="85dp"
       android:layout_marginTop="10dp"
     >
 
<LinearLayout
    android:id="@+id/home_top_media_online"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_alignParentRight="true"
    android:layout_marginRight="80dp"
    android:gravity="center"
    >
    <ImageView 
       android:layout_width="45dp"
                android:layout_height="45dp"
    android:background="@drawable/home_movies_button"
    android:layout_gravity="center"
        />
    <TextView 
         android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/home_button_movies"
    android:layout_marginTop="1dp"
    style="@style/NormalWhiteText18"
        />
</LinearLayout>
<LinearLayout
    android:id="@+id/home_top_wifi_chose_song"
    android:layout_toLeftOf="@id/home_top_media_online" 
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginRight="30dp"
    >
    <ImageView 
       android:layout_width="45dp"
                android:layout_height="45dp"
    android:layout_gravity="center"
    android:background="@drawable/wuxian2"
        />
    <TextView 
         android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   android:text="@string/home_button_wuxian"
    android:layout_marginTop="1dp"
    style="@style/NormalWhiteText18"
        />
</LinearLayout>
<LinearLayout
    android:id="@+id/home_top_cloud_server" 
    android:layout_toLeftOf="@id/home_top_wifi_chose_song"
    android:layout_width="wrap_content"
    android:layout_marginRight="30dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <ImageView 
        android:layout_width="45dp"
                android:layout_height="45dp"
    android:background="@drawable/home_yunfuwu_button"
        />
    <TextView 
         android:layout_width="55dp"
    android:layout_height="wrap_content"
    android:text="@string/home_button_yunfuwu"
    android:layout_marginTop="1dp"
    style="@style/NormalWhiteText18"
        />
</LinearLayout>
<LinearLayout 
    android:id="@+id/home_top_msg"
    android:layout_toLeftOf="@id/home_top_cloud_server"
    android:layout_width="wrap_content"
    android:layout_marginRight="30dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <ImageView 
          android:layout_width="45dp"
                android:layout_height="45dp"
    android:background="@drawable/home_xiaoxi_button"
        />
    <TextView 
         android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/home_button_xinxi"
    android:layout_marginTop="1dp"
    style="@style/NormalWhiteText18"
        />
</LinearLayout>
    <TextView
        android:id="@+id/home_top_search" 
        android:layout_toLeftOf="@id/home_top_msg"
        android:layout_width="105dp"
    android:layout_height="35dp"
    android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:gravity="bottom|center"
        android:background="@drawable/home_sousuo_button"
        style="@style/NormalWhiteText18"
        />
    <LinearLayout
    android:layout_marginRight="40dp"
       android:layout_width="444dp"
    android:layout_height="40dp"
    android:layout_marginTop="40dp"
    android:orientation="horizontal"
    android:layout_toLeftOf="@id/home_top_search"
    android:background="@drawable/paoma"
    android:gravity="center"
         >

     <com.sz.ktv.view.widget.ScrollTextView
         android:layout_marginTop="0dp"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:id="@+id/scroll_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
         android:visibility="gone"
        customAttr:clickEnable="false"
        customAttr:isHorizontal="true"
        android:layout_gravity="center"
        customAttr:speed="1"
        customAttr:text="当前播放: 蓝莲花"
        customAttr:textColor="#ff00ff00"
        customAttr:textSize="20dp"
        customAttr:times="1567" />

        <TextView
            android:id="@+id/scroll_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="当前播放: 蓝莲花1 当前播放: 蓝莲花2当前播放: 蓝莲花3当前播放: 蓝莲花4当前播放: 蓝莲花5当前播放: 蓝莲花6当前播放: 蓝莲花7当前播放: 蓝莲花当前播放: 蓝莲花"
            android:textColor="#ffff0000"
            android:textSize="20sp"
            android:marqueeRepeatLimit ="marquee_forever"
            />
    </LinearLayout>
</RelativeLayout>
