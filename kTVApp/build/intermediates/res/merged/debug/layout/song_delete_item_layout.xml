<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
     >
    
      <RelativeLayout 
            android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
          >
          <TextView 
               android:layout_width="40dp"
    android:layout_height="match_parent"
    android:text=""
    android:id="@+id/show_no"
    android:gravity="left|center"
    style="@style/NormalWhiteText20"
    android:layout_alignParentLeft="true"
              />
      
             <TextView 
               android:layout_width="40dp"
    android:layout_height="match_parent"
    android:text="1"
    android:id="@+id/show_count"
    android:gravity="left|center"
    android:layout_alignParentRight="true"
    style="@style/NormalWhiteText20"
    android:visibility="invisible"
              />
             <LinearLayout 
                    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_toRightOf="@id/show_no"
    android:layout_toLeftOf="@id/show_count"
                 >
                  <TextView 
               android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="loiudengddfdfdf"
    android:id="@+id/show_name"
    android:gravity="left|center"
    style="@style/NormalWhiteText20"
    android:layout_weight="2"
              />
                 
       <TextView 
               android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/show_singer"
    android:gravity="left|center"
    style="@style/NormalWhiteText20"
     android:layout_weight="1"
              />
                 
             </LinearLayout>
        
      </RelativeLayout>
                       <com.sz.ktv.view.TextViewDel 
               android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/show_delete"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
   android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
              />
</RelativeLayout>