<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#ffffffff"
        android:orientation="horizontal" >

        
        <com.sz.ktv.view.handwrite.SelfAbsoluteLayout
            android:id="@+id/layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                style="@style/NormalBlackText14"
                android:id="@+id/hanzi_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                 android:text=""
                 style="@style/NormalBlackText14"
                android:id="@+id/hanzi_2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                 android:text=""
                 style="@style/NormalBlackText14"
                android:id="@+id/hanzi_3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                style="@style/NormalBlackText14"
                android:id="@+id/hanzi_4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                 android:text=""
                 style="@style/NormalBlackText14"
                android:id="@+id/hanzi_5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="回刪"
                android:background="@color/color_gray"
                style="@style/NormalBlackText14"
                android:id="@+id/hanzi_delete"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                style="@style/NormalBlackText14"
                android:id="@+id/hanzi_6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                style="@style/NormalBlackText14"
                android:id="@+id/hanzi_7"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                 android:text=""
                 style="@style/NormalBlackText14"
                android:id="@+id/hanzi_8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                 android:text=""
                 style="@style/NormalBlackText14"
                android:id="@+id/hanzi_9" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                style="@style/NormalBlackText14"
                android:id="@+id/hanzi_10" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="清空" 
                style="@style/NormalBlackText14"
                 android:background="@color/color_gray"
                android:id="@+id/hanzi_clear"
                />
        </LinearLayout>
    </LinearLayout>
 
</LinearLayout>