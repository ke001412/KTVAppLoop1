<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qifen_bg1" >

    <TextView
        android:id="@+id/gaoguai_title"
        style="@style/NormalWhiteText13"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="left|center"
        android:text="@string/ktv_xianhua" />
 
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/gaoguai_title"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/flower_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/flower1" />

            <ImageView
                android:id="@+id/flower_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/flower2" />

            <ImageView
                android:id="@+id/flower_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/flower3" />

            <ImageView
                android:id="@+id/flower_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/flower4" />
        </LinearLayout>

</RelativeLayout>