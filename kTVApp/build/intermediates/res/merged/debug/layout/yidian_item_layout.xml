<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/transparent"
     >
  <TextView 
      android:layout_width="wrap_content"
    android:layout_height="match_parent"
      style="@style/NormalWhiteText16"
      android:text="1."
      android:id="@+id/yidian_item_num"
      android:gravity="center"
      android:layout_centerVertical="true"
      android:layout_alignParentLeft="true"
      />
  <ImageButton 
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/yidian_shanchu_button"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:id="@+id/yidian_item_shanchu"
      />
  <ImageButton 
          android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:layout_width="35dp"
    android:layout_height="35dp"
    android:background="@drawable/yidian_chabo_button"
    android:layout_toLeftOf="@id/yidian_item_shanchu"
    android:layout_centerVertical="true"
    android:layout_marginRight="15dp"
    android:id="@+id/yidian_item_chabo"
      />
  <TextView 
        android:layout_width="40dp"
    android:layout_height="match_parent"
      style="@style/NormalWhiteText16"
      android:text="刘德华"
      android:ellipsize="end" 
      android:singleLine="true"
      android:layout_toLeftOf="@id/yidian_item_chabo"
      android:id="@+id/yidian_item_song_singer"
      android:gravity="center"
      android:layout_marginRight="5dp"
      android:layout_centerVertical="true"
      />
  <TextView 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
      style="@style/NormalWhiteText16"
      android:text="蓝眼泪"
      android:ellipsize="end" 
      android:singleLine="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_toLeftOf="@id/yidian_item_song_singer"
      android:layout_toRightOf="@id/yidian_item_num"
      android:id="@+id/yidian_item_song_name"
      android:gravity="left|center"
      />
</RelativeLayout>