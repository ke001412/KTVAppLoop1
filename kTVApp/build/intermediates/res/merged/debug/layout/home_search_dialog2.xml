<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F4"
    >

    <EditText
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#C0C1C1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="left|center" 
        android:padding="5dp"
        
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/search_text"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:id="@+id/search_tips_layout"
        >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="*"
        style="@style/NormalRedText12"
        android:gravity="left|center"
        />
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/ktv_search_tips"
        style="@style/NormalBlackText12"
          android:gravity="left|center"
        />
    
    </LinearLayout>
    
    <LinearLayout 
        android:layout_below="@id/search_tips_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/search_zishu_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        >
        <Button 
             android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="一"
        style="@style/NormalBlackText12"
        android:layout_weight="1"
        android:background="@color/color_white"
         android:layout_marginLeft="10dp"
         android:id="@+id/search_1"
            />
         <Button 
             android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="二"
        style="@style/NormalBlackText12"
        android:layout_weight="1"
        android:background="@color/color_white"
        android:layout_marginLeft="10dp"
        android:id="@+id/search_2"
            />
          <Button 
             android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="三"
        style="@style/NormalBlackText12"
        android:layout_weight="1"
        android:background="@color/color_white"
         android:layout_marginLeft="10dp"
         android:id="@+id/search_3"
            /><Button 
             android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="四"
        style="@style/NormalBlackText12"
        android:layout_weight="1"
        android:background="@color/color_white"
         android:layout_marginLeft="10dp"
         android:id="@+id/search_4"
            />
         <Button 
             android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="五"
        style="@style/NormalBlackText12"
        android:layout_weight="1"
        android:background="@color/color_white"
        android:layout_marginLeft="10dp"
        android:id="@+id/search_5"
            />
          <Button 
             android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="六"
        style="@style/NormalBlackText12"
        android:layout_weight="1"
        android:background="@color/color_white"
         android:layout_marginLeft="10dp"
         android:id="@+id/search_6"
            /><Button 
             android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="七"
        style="@style/NormalBlackText12"
        android:layout_weight="1"
        android:background="@color/color_white"
         android:layout_marginLeft="10dp"
         android:id="@+id/search_7"
            />
         <Button 
             android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="八"
        style="@style/NormalBlackText12"
        android:layout_weight="1"
        android:background="@color/color_white"
        android:layout_marginLeft="10dp"
        android:id="@+id/search_8"
            />
          <Button 
             android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="多"
        style="@style/NormalBlackText12"
        android:layout_weight="1"
        android:background="@color/color_white"
         android:layout_marginLeft="10dp"
         android:id="@+id/search_duo"
            />
        </LinearLayout>
    
    <LinearLayout 
        android:layout_below="@id/search_zishu_layout"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >
        <Button 
             android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/ktv_shoupin"
        style="@style/NormalBlackText12"
        android:layout_weight="1"
        android:background="@color/color_white"
         android:layout_marginLeft="10dp"
         android:id="@+id/search_shoupin"
            />
         <Button 
             android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="手写"
        style="@style/NormalBlackText12"
        android:layout_weight="1"
        android:background="@color/color_white"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:id="@+id/search_shouxie"
            />
          <Button 
             android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/ktv_zishu"
        style="@style/NormalBlackText12"
        android:layout_weight="1"
        android:background="@color/color_white"
         android:layout_marginLeft="10dp"
         android:id="@+id/search_zishu"
            />
        </LinearLayout>
        
</RelativeLayout>