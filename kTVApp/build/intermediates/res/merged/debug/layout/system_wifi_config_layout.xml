<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/houtai"
    >
    <TextView 
          android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentTop="true"
    android:text="@string/ktv_set_wangluoshezhi"
    style="@style/BoldWhiteText24"
    android:gravity="center"
    android:id="@+id/wifi_title"
        />
<RelativeLayout 
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="35dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    >
    
    <RelativeLayout 
        android:layout_width="380dp"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        >
     <LinearLayout
           android:layout_width="match_parent"
    android:layout_height="25dp"
    android:orientation="horizontal"
    android:id="@+id/wifi_lanip"
    android:layout_marginTop="10dp"
          >
          <TextView 
                android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="LAN-IP:"
    style="@style/BoldWhiteText16"
              />
         <TextView 
               android:layout_width="120dp"
    android:layout_height="match_parent"
    android:text="255.255.255.255"
    style="@style/BoldWhiteText16"
             />
          <TextView 
                android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="MAC:"
    style="@style/BoldWhiteText16"
              />
         <TextView 
               android:layout_width="150dp"
    android:layout_height="match_parent"
    android:text="00:00:00:00:00:00"
    style="@style/BoldWhiteText16"
    android:id="@+id/wifi_mac"
             />
     </LinearLayout>
 <LinearLayout
           android:layout_width="match_parent"
    android:layout_height="25dp"
    android:orientation="horizontal"
    android:layout_below="@id/wifi_lanip"
    android:id="@+id/wifi_workmode"
    android:layout_marginTop="10dp"
          >
          <TextView 
                android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="@string/ktv_wangluo_gongzuomoshi"
    style="@style/BoldWhiteText16"
              />
         <TextView 
               android:layout_width="120dp"
    android:layout_height="25dp"
    android:text="无线网卡"
    style="@style/BoldWhiteText16"
    android:background="@color/color_blue"
    android:id="@+id/wifi_mode"
    android:paddingLeft="10dp"
             />
           
     </LinearLayout>

    <TextView 
                android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:text="@string/ktv_wangluo_shuru_mima"
    style="@style/BoldWhiteText16"
    android:id="@+id/wifi_tips"
    android:layout_marginTop="10dp"
     android:layout_below="@id/wifi_workmode"
              />
    
 <LinearLayout
           android:layout_width="match_parent"
    android:layout_height="25dp"
    android:orientation="horizontal"
     android:layout_below="@id/wifi_tips"
     android:id="@+id/wifi_ssid_layout"
     android:layout_marginTop="5dp"
          >
          <TextView 
                android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="WIFI-SSID:"
    style="@style/BoldWhiteText16"
              />
         <EditText 
               android:layout_width="120dp"
    android:layout_height="25dp"
    android:text="wifitest"
    style="@style/BoldWhiteText16"
    android:background="@color/color_blue"
    android:id="@+id/wifi_ssid"
    android:paddingLeft="10dp"
             />
           
     </LinearLayout>

 <LinearLayout
           android:layout_width="match_parent"
    android:layout_height="25dp"
    android:orientation="horizontal"
     android:layout_below="@id/wifi_ssid_layout"
     android:id="@+id/wifi_pwd_layout"
     android:layout_marginTop="10dp"
          >
          <TextView 
                android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="WIFI-PWD:"
    style="@style/BoldWhiteText16"
              />
         <EditText 
               android:layout_width="120dp"
    android:layout_height="25dp"
    android:text="123456"
    style="@style/BoldWhiteText16"
    android:background="@color/color_blue"
    android:id="@+id/wifi_pwd"
    android:paddingLeft="10dp"
             />
           
     </LinearLayout>
 </RelativeLayout>
 <RelativeLayout 
       android:layout_width="260dp"
    android:layout_height="25dp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="30dp"
     >
     <Button 
         android:layout_width="60dp"
    android:layout_height="30dp"
    android:text="@string/ktv_wangluo_lianjie"
    android:id="@+id/wifi_connect"
    android:layout_alignParentLeft="true"
    android:background="@color/color_blue"
    style="@style/NormalWhiteText16"
         />
      <Button 
         android:layout_width="60dp"
    android:layout_height="30dp"
    android:text="@string/ktv_quxiao"
    android:id="@+id/wifi_cancle"
    android:layout_centerHorizontal="true"
     android:background="@color/color_blue"
    style="@style/NormalWhiteText16"
         />
     
       <Button 
         android:layout_width="80dp"
    android:layout_height="30dp"
    android:text="@string/ktv_wangluo_saomiao"
    android:id="@+id/wifi_scan"
    android:layout_alignParentRight="true"
     android:background="@color/color_blue"
    style="@style/NormalWhiteText16"
         />
     
     
 </RelativeLayout>
 
</RelativeLayout>
<com.sz.ktv.view.widget.KtvBottomPageWidget
    android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:id="@+id/sys_wifi_config_back"
    	android:layout_alignParentBottom="true"
    	android:layout_marginBottom="10dp"
    />

</RelativeLayout>