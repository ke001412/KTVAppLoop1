   <com.sz.ktv.view.widget.KtvBottomPageWidget
       android:id="@+id/geming_back"
       android:layout_width="fill_parent"
       android:layout_height="30dp"
       android:layout_alignParentBottom="true"
       />
</RelativeLayout>