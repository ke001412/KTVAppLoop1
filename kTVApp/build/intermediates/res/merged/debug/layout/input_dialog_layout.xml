<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:padding="10dp"
    >
        <TextView
            android:id="@+id/input_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:text="@string/input_dialog_title_str"
            />
        <EditText
            android:id="@+id/input_dialog_et"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="@string/input_dialog_et_hint_str"
            android:layout_below="@+id/input_dialog_title"
            android:singleLine="true" >
        </EditText>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_dialog_et"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            >
        <Button
            android:id="@+id/input_dialog_btn_ok"
            android:layout_width="@dimen/input_dialog_btn_width"
            android:layout_height="@dimen/input_dialog_btn_hight"
			android:layout_alignParentLeft="true"
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true"
            android:background="@color/input_dialog_btn_color"
            android:text="@string/input_dialog_btn_text" />
        <Button
            android:id="@+id/input_dialog_btn_cancle"
            android:layout_width="@dimen/input_dialog_btn_width"
            android:layout_height="@dimen/input_dialog_btn_hight"
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/input_dialog_btn_ok"
            android:background="@color/input_dialog_btn_color"
            android:text="取消" />
        </RelativeLayout>
</RelativeLayout>    
</ScrollView>