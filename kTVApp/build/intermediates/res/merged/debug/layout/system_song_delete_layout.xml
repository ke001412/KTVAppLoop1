                            android:background="@color/color_blue"
                            android:padding="1dp"
                            android:text=""
                            app:underline_color="@color/color_red"
                            app:underline_height="1dp" 
                            android:id="@+id/song_del_geming"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/NormalWhiteText18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ktv_del_03" />

                        <com.sz.ktv.view.widget.UnderlineTextView
                            style="@style/NormalWhiteText18"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@color/color_blue"
                            android:padding="1dp"
                            android:text=""
                            app:underline_color="@color/color_red"
                            app:underline_height="1dp" 
                            android:id="@+id/song_del_gexing"
                              />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/NormalWhiteText18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ktv_del_04" />

                        <com.sz.ktv.view.widget.UnderlineTextView
                            style="@style/NormalWhiteText18"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@color/color_blue"
                            android:padding="1dp"
                            android:text=""
                            app:underline_color="@color/color_red"
                            app:underline_height="1dp" 
                            android:id="@+id/song_del_shoupin"
                              />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/NormalWhiteText18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ktv_del_05" />

                        <com.sz.ktv.view.widget.UnderlineTextView
                            style="@style/NormalWhiteText18"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@color/color_blue"
                            android:padding="1dp"
                            android:text=""
                            app:underline_color="@color/color_red"
                            app:underline_height="1dp" 
                            android:id="@+id/song_del_yubie"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/NormalWhiteText18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ktv_del_06" />

                        <com.sz.ktv.view.widget.UnderlineTextView
                            style="@style/NormalWhiteText18"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@color/color_blue"
                            android:padding="1dp"
                            android:text=""
                            app:underline_color="@color/color_red"
                            app:underline_height="1dp" 
                            android:id="@+id/song_del_zishu"
                             />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/NormalWhiteText18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ktv_del_07" />

                        <com.sz.ktv.view.widget.UnderlineTextView
                            style="@style/NormalWhiteText18"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@color/color_blue"
                            android:padding="1dp"
                            android:text=""
                            app:underline_color="@color/color_red"
                            app:underline_height="1dp" 
                            android:id="@+id/song_del_leibie"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/NormalWhiteText18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ktv_del_08" />

                        <com.sz.ktv.view.widget.UnderlineTextView
                            style="@style/NormalWhiteText18"
                            android:layout_width="100dp"
