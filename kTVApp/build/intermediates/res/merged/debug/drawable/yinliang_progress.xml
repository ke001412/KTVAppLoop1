<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

  <item android:id="@android:id/background">
<shape >
          <corners android:radius="10dip" />
          <gradient
              android:angle="270"
              android:centerColor="#EFFFFF00"
              android:centerY="0.45"
              android:endColor="#EFFFFF00"
              android:startColor="#EFFFFF00" />
      </shape>
  </item>

  <item android:id="@android:id/progress">
<clip >
          <shape >
              <corners android:radius="10dip" />
              <gradient
                  android:angle="270"
                  android:centerColor="#FFB400"
                  android:centerY="0.45"
                  android:endColor="#FFB400"
                  android:startColor="#FFB400" />
          </shape>
      </clip>
  </item>
</layer-list>